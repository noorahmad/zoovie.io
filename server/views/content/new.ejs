<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1>Add new content</h1>
      <div>
        <form action="/content/<%= conent._id %>/comments" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[name]" placeholder="text">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Author">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/content">Go back</a>
      </div>
  </div>
</div>

